<%- include('../partials/header') %>

<h1>Edit Skill #<%= devSkills.id %></h1>

<!-- action === href of an a tag -->
<form action="/dev-skills/<%= devSkills.id %>?_method=PUT" method="POST" autocomplete="off">
  <input type="text" name="skill" value="<%= devSkills.skill %>">
  <br>
  <input type="checkbox" name="possess" <%= devSkills.possess ? 'checked' : '' %>> 
  <label for="done">Mastered?</label>
  <br>
  <input type="submit" value="SAVE SKILL">
</form>

<%- include('../partials/footer') %>
